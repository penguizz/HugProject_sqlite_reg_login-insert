<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    tools:context="com.example.penguinn.hugproject.ShowdataActivity">

    <!--<WebView-->
    <!--android:id="@+id/web_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="ข้อมูลนักเรียน"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/stu_lastname"
            android:layout_alignRight="@+id/stu_lastname"
            android:layout_below="@+id/profile"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"
            android:text="ชื่อ"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/stu_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stu_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:text="นามสกุล"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/stu_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stu_lastname"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:text="เบอร์โทร"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/stu_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stu_phone"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:text="รหัสผ่าน"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/parent_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stu_password"
            android:layout_marginTop="25dp"
            android:text="ข้อมูลผู้ปกครอง"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/parent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/parent_profile"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:text="ชื่อ"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/parent_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/parent_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:text="นามสกุล"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/parent_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/parent_lastname"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:text="เบอร์โทร"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/parent_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/parent_phone"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:text="อีเมล"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_name"
            android:layout_alignBottom="@+id/stu_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="110dp"
            android:textSize="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_stu_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/stu_name"
            android:ems="10"
            android:layout_marginLeft="110dp"
            android:inputType="textPersonName"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/edit_stu_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_phone"
            android:layout_alignBottom="@+id/stu_phone"
            android:layout_alignLeft="@+id/edit_stu_lastname"
            android:layout_alignStart="@+id/edit_stu_lastname"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_stu_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_password"
            android:layout_alignBottom="@+id/stu_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="110dp"
            android:textSize="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_parent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parent_name"
            android:layout_alignBottom="@+id/parent_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="110dp"
            android:textSize="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_parent_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parent_lastname"
            android:layout_alignBottom="@+id/parent_lastname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="110dp"
            android:textSize="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_parent_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parent_phone"
            android:layout_alignBottom="@+id/parent_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="110dp"
            android:textSize="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_parent_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parent_email"
            android:layout_alignBottom="@+id/parent_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="110dp"
            android:textSize="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/parent_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:text="บันทึก"
            android:textSize="17dp" />


    </RelativeLayout>

</RelativeLayout>